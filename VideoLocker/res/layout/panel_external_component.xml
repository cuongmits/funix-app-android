<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offline_panel_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/lbl_showing_only_videos"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        tools:targetApi="17" />

    <TextView
        android:id="@+id/open_in_browser_btn"
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/lbl_view_on_web"
        android:textAllCaps="true"
        android:textSize="11sp"
        android:linksClickable="true"
        android:textColor="@color/cyan_text_navigation"
        android:drawableRight="@drawable/ic_media_lms_active_mirrored"
        android:drawableEnd="@drawable/ic_media_lms_active_mirrored"
        android:drawablePadding="8dp"
        tools:targetApi="17"
        /> 
    
</RelativeLayout>
